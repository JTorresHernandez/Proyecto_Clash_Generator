

{{#if cuenta}}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading" style="background-color:#333">
        <h4 style="color:white;font-family:'Open Sans';">Introducir Carta</h4>
        </div>
        <div class="panel-body">

<form action="/api/Icarta" method="post">
<span style="font-weight: bold;font-family: acme;">Nombre:</span>
<input type="nombre" style="font-family: acme;" name="nombre" placeholder="Introduzca el nombre de la carta" class="form-control">
<br />
<span style="font-weight: bold;font-family: acme;">Imagen:</span>
<input type="imagen" style="font-family: acme;" name="imagen" placeholder="Introduzca la imagen de la carta" class="form-control">
<br />
<span style="font-weight: bold;font-family: acme;">Coste de elixir:</span>
<input type="coste" style="font-family: acme;" name="coste" placeholder="Introduzca el coste de elixir" class="form-control">
<br />
<span style="font-weight: bold;font-family: acme;">Categoria:</span>
<input type="categoria" style="font-family: acme;" name="categoria" placeholder="Elija la categoria entre: legendaria, epica, especial y comun" class="form-control">
<br />
<input type="submit" value="Introducir">
</form>
      </div>
    </div>
    </div>
</div>

    {{/if}}
